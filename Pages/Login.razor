@page "/login"
@using GNUCannabis.Pages.Components
@using System.ComponentModel.DataAnnotations

<PageTitle>Inicio de Sesión</PageTitle>
<h1>Iniciar Sesion</h1>
<EditForm Model="@model" OnValidSubmit="ValidateCredentials">


    <GNUButton Text="Iniciar Sesion" ButtonType="submit">
    </GNUButton>
</EditForm>
<NavLink href="/register">¿No tienes cuenta? Regístrate aquí</NavLink>


@code {
    private LoginModel model = new LoginModel();

    private class LoginModel
    {
        [Required(ErrorMessage = "El Correo es obligatorio")]
        [EmailAddress(ErrorMessage = "Correo no válido")]
        public string email { get; set; } = string.Empty;

        [Required(ErrorMessage = "La contraseña es obligatoria.")]
        [DataType(DataType.Password)]
        public string password { get; set; } = string.Empty;
    }

    private void ValidateCredentials()
    {
        Console.WriteLine($"Correo: {model.email}, Contraseña: {model.password}");
    }
}